{
  "compileOnSave": false,
  "compilerOptions": {
    "declaration": true,
    "importHelpers": true,
    "outDir": "dist",
    "lib": ["esnext", "dom"],
    "moduleResolution": "node",
    "noImplicitAny": false,
    "sourceMap": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "module": "es2015",
    "target": "es5",
    // "typeRoots": ["../node_modules/@types"],
    "types": ["jest", "node"],
      "paths" : {
      "tslib/*": "package/tslib/src/*"
    }

  },
  "include": ["src"],
  "exclude": ["dist/**/*", "spec/**/*", "integration/**/*", "example/**/*"]
}
